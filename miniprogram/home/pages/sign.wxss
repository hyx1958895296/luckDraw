.sign-in_page{
  height: 100%;
  background-image: linear-gradient(to top, rgb(255, 140, 101), rgb(255, 140, 102),rgb(255, 140, 100));
  padding: 30rpx 0;
}
 
.calendar_title {
  color: #fff;
  display: flex;
  justify-content: center;
  align-items: center;
}
 
.calendar_title .icon {
  width: 60rpx;
  height: 60rpx;
  font-size: 0;
}
 
.icon image {
  width: 100%;
  height: 100%;
}
 
.nowDtae {
  color: white;
  margin: 0 20rpx;
}
 
/* 日历 */
.calendar {
  width: 100%;
  background-color: #ff5533;
  opacity: .8;
  border-radius: 20rpx;
  margin: 30rpx 0;
}
 
.header {
  font-size: 0;
  width: 100%;
  border-bottom: 1px solid #D0D0D0;
}
 
.header>view {
  display: inline-block;
  width: 14%;
  color: #fff;
  font-size: 30rpx;
  text-align: center;
  padding: 20rpx 0;
}
 
.avatar-url{
  background-color: red;
  width: 200rpx;
  height: 200rpx;
  border-radius: 200rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

/* .avatar-url image{
  
} */
 
.date-box {
  padding: 10rpx 0;
  width: 100%;
}
 
.date-box>view {
  display: inline-block;
  width: 14%;
  height: 80rpx;
  color: #666;
  text-align: center;
  vertical-align: middle;
}
 
.date-head {
  height: 60rpx;
  line-height: 60rpx;
  color: #fff;
}
 
.nowDay .date-head {
  width: 60rpx;
  border-radius: 50%;
  text-align: center;
  color: #fff;
  background-color: #ff9933;
  margin: 0 auto;
}
.nowsDay .date-head{
  width: 60rpx;
  border-radius: 50%;
  text-align: center;
  color: #fff;
  background-color: #47c46d;
  margin: 0 auto;
}
/* 签到 */
.center {
  background: #ff5533;
  padding: 40rpx 0;
}
.flex_center{
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
  border-radius: 30rpx;
}
.center_text {
  margin-top: 20rpx;
  color: white;
  font-size: 38rpx;
}
.center_texts{
  color: white;
}
.bottom_text {
  font-weight: normal;
  line-height: 60rpx;
}
 
.bottom_text text {
  color: white;
}
 
.bottom {
  padding: 40rpx 0;
  margin-top: 30rpx;
  background-color: #ff5533;
}
