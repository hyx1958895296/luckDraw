.sign-in_wrap{
  padding:0 20rpx;
}
.sign-in_page{
  height: 100vh;
  background-image: linear-gradient(to top, rgb(255, 140, 101), rgb(255, 140, 102),rgb(255, 140, 100));
  position: relative;
  z-index: 4;
}
.header{
  height: 33vh;
  background-image: url("https://776c-wllyun-dev-3gxie2dud70a3acf-1316269736.tcb.qcloud.la/qd_bj_image.png?sign=9fe8907ea390298e3ed1756b5f350076&t=1675321399");
  background-size: 100% 100%;
  background-repeat: no-repeat;
  z-index: 1;
  position: relative;
}

.header-avatar_score{
  display: flex;
  align-items: center;
  column-gap: 20rpx;
  padding: 15rpx;
}

.avatar{
  width: 100rpx;
  height: 100rpx;
  border-radius: 100rpx;
}

.current-score{
  vertical-align: center;
}

.sign-in_text{
  display: flex;
  height: 10vh;
  justify-content: center;
  align-items:center;
}
.sign-in_image{
  height: 188rpx;
  width: 387rpx;
}

.main{
  width: 95.5vw;
  top: 26vh;
  position: absolute;
  z-index: 1;
}
.calender{
  background-size: 100% 100%;
  background-repeat: no-repeat;
}
.message-tips{
  text-align: center;
  font-size: 30rpx;
  color: white;
  padding: 70rpx 0;
  display: flex;
  justify-content: center;
  align-items: center;
}
.sign-in_number{
  color: rgb(254, 226, 73);
}

.calender-container{
  margin: 70rpx 0;
} 