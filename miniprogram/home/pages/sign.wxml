<view class="sign-in_page">
  <view class="pt-30 pb-30" wx:if="{{ !flag }}">
    <view class="contant wrap">
      <!-- 日历年月 -->
      <view class='calendar_title layer_center'>
        <view class='icon' bindtap='lastMonth'>
          <image src='../../images/arrow-left.png' />
        </view>
        <view class="nowDate font60">{{year}}年{{month}}月</view>
        <view class='icon' bindtap='nextMonth'>
          <image src='../../images/arrow-right.png' />
        </view>
      </view>
      <!-- 日历主体 -->
      <view class='calendar'>
        <view class='header'>
          <view wx:for='{{date}}' wx:key='index' class='{{(index == todayIndex) && isTodayWeek ? "weekMark" : ""}} '>{{item}}
            <view></view>
          </view>
        </view>
        <view class='date-box'>
          <block wx:for='{{dateArr}}' wx:key='index'>
            <view class='{{item.choose?"nowsDay":isToday == item.isToday ? "nowDay":""}}'>
              <view class='date-head font28' data-year='{{year}}' data-month='{{month}}' data-datenum='{{item.dateNum}}'>
                <view>{{item.dateNum}}</view>
              </view>
            </view>
          </block>
        </view>
      </view>
    </view>

    <view class="wrap mt-30 message_text">
      再累计签到<text> 7 </text>天，
      会获得额外 <text> 80 </text> 积分
    </view>

    <view class="wrap mt-30 center flex_center" bindtap="signIn" wx:if="{{ !signinNow }}">
      <view class="avatar-url center_text">
       立即签到
      </view>
    </view>
    <view class="wrap mt-30 center flex_center" bindtap="alreadySign" wx:else>
      <view class="avatar-url center_text center_texts">
        已签到
      </view>
    </view>
  </view>
  <view class="model-box" wx:else>
    <view class="model-box_container">
      <view class="flex-end">
        <view>

        </view>
        <image bindtap="closeModelBox" class="close" src="../../images/close.png" mode=""/>
      </view>
      <view class="model-box_header">
        <image src="{{ userInfo.avatarUrl }}" class="avatar" mode="" />
        <view class="user-name">
          {{ userInfo.nickName }}
        </view>
      </view>
      <view class="model-box_main">
        <view class="signin-success_text">
          签到成功
        </view>
        <view class="second-title">
          您已获得 <text class="score-number">20</text> 积分
        </view>
        <view class="third-title">
          去兑换心仪的商品吧
        </view>
      </view>
      <view class="model-box_footer" bindtap="goExchange">
        去兑换
      </view>
    </view>
  </view>
</view>