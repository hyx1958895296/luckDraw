/* createRaffle/pages/addLoopDraw/addLoopDraw.wxss */
.mt-40 {
  margin-top: 40rpx;
}

.pd-60 {
  padding-top: 60rpx;
}

.pd-30 {
  padding-top: 30rpx;
}

.pd-48 {
  padding-top: 48rpx;
}

.pd-36 {
  padding: 36rpx 0;
}

.fz-34 {
  font-size: 34rpx;
}

.color-5f5f5f {
  color: #5f5f5f;
}

.fz-44 {
  font-size: 44rpx;
}

.add-loop-draw-box {
  background-image: linear-gradient(to top, #f2f2f2 80%, #f53f3b);
  height: 100vh;
}

.add_icon {
  width: 60rpx;
  height: 60rpx;
}

.first-column {
  padding: 40rpx;
  text-align: center;
  background-color: white;
  border-radius: 20rpx;
  font-weight: 600;
  color: #01bc65;
}

.add-third-stage {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 8rpx;
}

.second-column {
  padding: 40rpx 32rpx;
  background-color: white;
}

.flex-space-bet {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.query-detail {
  border-top: 1rpx solid #f4f4f4;
  border-radius: 0 0 20rpx 20rpx;
  background-color: #fdfdfd;
  display: flex;
  align-items: center;
  justify-content: center;
}

.number-periods {
  color: #f53f3b;
}

.un-start {
  background-color: #fef2ee;
  padding: 10rpx 16rpx;
  font-size: 30rpx;
  color: #df5b56;
  border-radius: 20rpx;
  font-weight: 600;
}

.already-conduct {
  background-color: #e2fbed;
  padding: 10rpx 16rpx;
  font-size: 30rpx;
  color: #2ab472;
  border-radius: 20rpx;
  font-weight: 600;
}

.model-box {
  position: absolute;
  top: 0;
  left: 0;
  background-color: rgba(97, 97, 97, .8);
  z-index: 300;
  height: 100vh;
  width: 100vw;
  padding: 0 60rpx;
  box-sizing: border-box;
}

.delete {
  background-color: white;
  padding: 10rpx 30rpx;
  margin-top: 62%;
  border-radius: 20rpx;
}

.exit {
  text-align: right;
  font-size: 60rpx;
  color: #c5c5c5;
}

.ok-delete {
  font-size: 45rpx;
  font-weight: 600;
  text-align: center;
}

.delete-content {
  font-size: 32rpx;
  padding: 40rpx 0;
  text-align: center;
}

.btn {
  display: flex;
  justify-content: space-around;
  align-items: center;
  margin-bottom: 20rpx;
}

.cancle-btn {
  width: 30vw;
  padding: 30rpx 0;
  background-color: #f0f0f0;
  border-radius: 50rpx;
  color: #797979;
  font-size: 34rpx;
  text-align: center;
}

.ok-delete-btn {
  width: 30vw;
  padding: 30rpx 0;
  background-color: #e04540;
  border-radius: 50rpx;
  color: white;
  font-size: 34rpx;
  text-align: center;
}