
.create-raffle{
  background: linear-gradient(#f53f3b,#f53f3b,#ffffff, #f1f1f1,#f1f1f1,#f1f1f1,#f1f1f1);
  min-height: 100vh;
}

.avator{
  width: 110rpx;
  height: 110rpx;
  border-radius: 10rpx;
}

.user-avator{
  /* gap: 30rpx; */
  align-items: center;
}

.user .icon {
  width:50rpx;
  height: 50rpx;
}

.icon-warp{
  align-items: center;
  gap: 40rpx;
}

.raffle-warp{
  position: relative;
  background-color: #ffffff;
}

.replace{
  padding: 15rpx 20rpx;
  border-radius: 6rpx;
  position: absolute;
  right: 20rpx;
  top: 20rpx;
  background-color: #92929296;
}

.replace .icon{
  width: 30rpx;
  height: 30rpx;
}

.gifts{
  width: 100%;
  height: 350rpx;
  border-radius: 20rpx 20rpx 0 0 ;
}

.hang{
  border-bottom:1rpx solid #f1f1f1 ;
}

.draw-warp{
  /* gap: 22rpx; */
}

.draw-item_active{
  border: 1rpx solid #d12418 !important;
  background-color: #d124182c;
  color: #d12418;
}

.draw-item{

  border-radius: 10rpx;
  border: 1rpx solid #9e9e9e;
}