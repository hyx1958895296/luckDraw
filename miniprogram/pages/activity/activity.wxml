<!--pages/activity/activity.wxml-->
<view class="activity">
  <view>
    <view class="nav-box">
      <view wx:for="{{tabList}}" wx:key="item" bindtap="tabFn">
        <view data-item="{{item}}"> {{item.title}}</view>
      </view>
    </view>
    <view class="active {{showId == 2 ? 'transition-l' : 'transition-r'}}"></view>
  </view>

  <view wx:if="{{showId == 1}}">
    <view class="activity-warp warp pt-20" wx:if="{{isLoaded}}">
      <view class="flex-column activity-all plr-20 mt-20">
        <activity class="activity-item" wx:for="{{activityList}}" wx:key="index" activity="{{item}}" bindtap="navigateto" data-to="{{item}}">
          <btn class="activity-btn" type="{{item.joinType}}"></btn>
        </activity>
      </view>
    </view>
  </view>

  <view wx:if="{{showId == 2}}">

  </view>



</view>