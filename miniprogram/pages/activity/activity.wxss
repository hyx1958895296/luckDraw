
.activity {
  min-height: 100vh;
}

.activity-item{
  border-radius: 20rpx;
}

.activity-all {
  gap: 20rpx;
}


.nav-box {
  display: flex;
  justify-content: space-between;
  padding: 30rpx 100rpx;
  color: white;
  background-color: rgba(255, 5, 5, 0.781);
  font-size: 32rpx;
  align-items: center;
  height: 50rpx;
}

.active {
  position: absolute;
  margin-top: -20rpx;
  margin-left:99rpx;
  width: 90rpx;
  border-bottom:5px solid rgba(255, 255, 255, 0.973);
  border-radius: 40rpx;
}

.transition-l {
  transition: all ease .4s;
  margin-left: 562.5rpx;
}

.transition-r {
  transition: all  .4s;
}