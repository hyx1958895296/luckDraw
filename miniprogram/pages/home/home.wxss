.wrap {
  padding: 0 30rpx;
}

.homepage {
  height: 100vh;
  background-image: linear-gradient(to top, rgba(231, 222, 222, 0.8), rgb(224, 69, 64),rgb(250, 51, 51));
}

.header {
  height: 15vh;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.container-header {
  background-color: rgb(255, 255, 255);
  width: 100%;
  height: 10vh;
  border-radius: 10rpx;
  display: flex;
  justify-content: space-around;
  align-items: center;
  padding:10rpx;
  font-size: 26rpx;
  font-weight: 500;
}

.align-center{
  display: flex;
  /* justify-content: center; */
  align-items: center;
  gap: 10rpx;
  flex-direction: column;
}

.fs-34{
  font-size: 34rpx;
}

.item-icon{
  width: 48rpx;
  height: 48rpx;
}

.integral {
  font-size: 48rpx;
}

.get-more-points {
  font-size: 30rpx;
}

.shop-size {
  width: 200rpx;
  height: 200rpx;
  display: inline-block;
}

.coupon {
  height: 93rpx;
  background-image: url("https://776c-wllyun-dev-3gxie2dud70a3acf-1316269736.tcb.qcloud.la/coupon.png?sign=fa06f22725b406564a29cd0a9dd76356&t=1675234080");
  background-size: cover;
}

.main {
  column-count:2;
  gap : 30rpx;
  margin: 30rpx 0;
}

.main-scroll{
  height: calc(100vh - 15vh - 15rpx - 30rpx - 30rpx);
  /* height: 50vh; */
}

.item {
  background-color: white;
  border-radius: 10rpx;
  margin-bottom: 30rpx;
  break-inside:avoid;
}

.shop-item-picture {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.shop-item-title {
  font-size: 24rpx;
  padding: 12rpx 0;
}

.points-redemption_line {
  font-size: 30rpx;
  color: #c90a74;
  text-decoration: line-through;
}

.points-redemption {
  font-size: 30rpx;
  color: #c90a74;
}

.points-text {
  padding-left: 8rpx;
  font-size: 18rpx;
  color: #c90a74;
  font-weight: bold;
}

.post_coupon-price {
  font-size: 18rpx;
  color: #c90a74;
  font-weight: bold;
}

.item-wrap {
  padding: 10rpx;
}

.prompt-box {
  height: 30rpx;
  border: 2px solid red;
  border-radius: 10rpx;
  margin-left: 15rpx;
  font-size: 20rpx;
  padding: 4rpx;
}

.prompt-box-triangle {
  width: 0;
  height: 0;
  margin-left: 20rpx;
  border: 10rpx solid transparent;
  border-bottom: transparent;
  border-top: 16rpx solid red;
}

.nav-item-grid {
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 30rpx;
  margin-top: 15rpx;
}

.hr {
  color: #ffffff;
  font-size: 32rpx;
  border-bottom:2rpx solid white
}

.other-navigator-hover {
  color: rgb(255, 255, 255);
}

.monthly-exchange {
  font-size: 18rpx;
  color: #969497;
}

.get-more_score {
  height: 130rpx;
  width: 330rpx;
  display: flex;
  align-items: flex-start;
  margin-bottom: 30rpx;
}