.wrap {
  padding: 0 30rpx;
}

.homepage {
  height: 100vh;
  background-image: linear-gradient(to bottom, #f53f3b, #f53f3b, #ffffff, #f1f1f1, #f1f1f1, #f1f1f1, #f1f1f1);
  padding:0 30rpx;
}

.header {
  height: 15vh;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.container-header {
  background-color: rgb(255, 255, 255);
  width: 100%;
  border-radius: 10rpx;
  display: flex;
  justify-content: space-around;
  align-items: center;
  padding: 20rpx;
  font-size: 26rpx;
  font-weight: 500;
  margin-top: 60rpx;
  box-sizing: border-box;
}

.align-center {
  display: flex;
  align-items: center;
  gap: 10rpx;
  flex-direction: column;
}
.grid-center{
  display: grid;
  align-items: center;
  justify-items:center;
  grid-template-rows: 44rpx;
  gap: 10rpx;
}

.item-icon {
  width: 48rpx;
  height: 48rpx;
}

.integral {
  font-size: 44rpx;
  font-weight: 800;
  color: #ff7f00;
}

.get-more-points {
  font-size: 30rpx;
}

.shop-size {
  width: 300rpx;
  height: 300rpx;
  display: inline-block;
}

.main {
  column-count: 2;
  break-inside: avoid;
  gap: 30rpx;
}

.swiper{
  height: 67vh;
}

.swiper-item {
  height: calc(100vh - 40vh);
}

.main-scroll {
  height: calc(100vh - 15vh - 15rpx - 30rpx - 30rpx - 80rpx);
  overflow: scroll;
}

.item {
  background-color: rgb(255, 255, 255);
  border-radius: 10rpx;
  margin-bottom: 30rpx;
  break-inside: avoid;
}

.border-eeece4{
  border:2rpx solid #eeece4;
}

.shop-item-picture {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.shop-item-title {
  font-size: 34rpx;
  padding-top: 12rpx;

}

.points-redemption {
  font-size: 36rpx;
  color: #c90a74;
}

.points-text {
  padding-left: 8rpx;
  font-size: 22rpx;
  color: #c90a74;
  font-weight: bold;
}

.item-wrap {
  padding: 10rpx;
}

.prompt-box {
  height: 30rpx;
  border: 2px solid red;
  border-radius: 10rpx;
  margin-left: 15rpx;
  font-size: 20rpx;
  padding: 4rpx;
}

.prompt-box-triangle {
  width: 0;
  height: 0;
  margin-left: 20rpx;
  border: 10rpx solid transparent;
  border-bottom: transparent;
  border-top: 16rpx solid red;
}

.nav-item-grid {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.list-warp {
  display: flex;
  justify-content: space-around;
  align-items: center;
  gap: 20rpx;
  font-size: 30rpx;
}

.border-line{
  width: 30%;
  border-bottom: 10rpx solid red;
  text-align: center;
  transition: all ease .8s;
}

.other-navigator-hover {
  color: rgb(255, 255, 255);
}

.monthly-exchange {
  font-size: 18rpx;
  color: #969497;
}

.get-more_score {
  height: 170rpx;
  width: 330rpx;
  border-radius: 10rpx;
  display: flex;
  align-items: flex-start;
  margin-bottom: 30rpx;
  -webkit-column-break-inside:avoid;
}

.hr{
  font-size: 40rpx;
  color: red;
}

.head {
  height: 90rpx;
  color: #333;
  font-size: 30rpx;
  padding-left: 30rpx;
  font-weight: bold;
  padding-bottom: 10rpx;
  box-sizing: border-box;
}
.head-title {
  position: relative;
  display: inline-block;
  height: 100%;
}
.head-title::after {
  content: '';
  position: absolute;
  z-index: 99;
  width: 15px;
  height: 15px;
  margin-left: -15rpx;
  border-top: 3px solid #333;
  border-right: 3px solid #333;
  border-top-right-radius: 100%;
  transform: rotate(-225deg);
  left: 50%;
  bottom: 3px;
}
.container {
  margin-top: 40rpx;
  height: 79vh;
  background-color: #fff;
  overflow: hidden;
  border-radius: 10rpx;
}
.container-head {
  width: 100%;
  height: 90rpx;
  box-sizing: border-box;
  padding: 10rpx 20rpx;
}
.container-head-sc {
  height: 50rpx;
  border-radius: 25rpx;
  background: #eeece4;
  color: #333;
  white-space: nowrap;
}
.container-head-sc .item {
  padding: 0 20rpx;
  min-width: 90rpx;
  text-align: center;
  line-height: 50rpx;
  font-size: 26rpx;
  display: inline-block;
  /* 引起高度塌陷 */
  vertical-align: top;
  height: 50rpx;
  width: 44%;
}
.container-head-sc .active {
  color: #ffffff;
  font-weight: bold;
  background: orange;
  border-radius: 25rpx;
}
/* swiper默认高度为150px */
.container-swiper {
  height: calc(100% - 110rpx);
}
.container-swiper-sc {
  height: 100%;
}
.container-swiper-sc .items {
  padding: 0 2%;
  width: 100%;
  box-sizing: border-box;
}
.container-swiper-sc .items .item-img {
  width: 30vw;
  height: 30vw;
  margin-right: 2.8%;
  margin-bottom: 10rpx;
  flex-shrink: 0;
}
.container-swiper-sc .items .item-img:nth-child(3n+3) {
  margin-right: 0;
}
/* 隐藏scroll-view的滚动条 */
::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}

.bottom-line{
  padding: 20vh 0 80rpx 0;
}

.fs-34 {
  font-size: 34rpx;
}