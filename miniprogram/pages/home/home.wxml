<view class="homepage">
  <view class="wrap header">
    <view class="container-header">
      <view class="align-center" bindtap="navToSign">
        <image src="../../images/qd_icon.png" class="item-icon" mode="" />
        <view>每日签到</view>
      </view>
      <view class="align-center">
        <image src="../../images/red_envelope.png" class="item-icon" mode="" />
        <view>商家入驻</view>
      </view>
      <view class="align-center">
        <image src="../../images/luck-draw.png" class="item-icon" mode="" />
        <view>参加活动</view>
      </view>
      <view class="align-center">
        <view class="fs-34">19</view>
        <view>积分</view>
      </view>
    </view>
  </view>
  <view class="wrap">
    <view class="nav-item-grid">
      <navigator open-type="switchTab" hover-class="other-navigator-hover" class="{{isHr.target.dataset.es == 0 ? 'hr' : ''}} " bindtap="hr" data-es="0">
        猜你感兴趣
      </navigator>
      <navigator open-type="switchTab" hover-class="other-navigator-hover" class="{{isHr.target.dataset.es == 1 ? 'hr' : ''}}" bindtap="hr" data-es="1">
        推荐商品
      </navigator>
      <navigator open-type="switchTab" hover-class="other-navigator-hover" class="{{isHr.target.dataset.es == 2 ? 'hr' : ''}}" bindtap="hr" data-es="2">
        美食
      </navigator>
      <navigator open-type="switchTab" hover-class="other-navigator-hover" class="{{isHr.target.dataset.es == 3 ? 'hr' : ''}} nav-to-item" bindtap="hr" data-es="3">
        日用
      </navigator>
    </view>
    <view class="main-scroll" wx:if="{{isHr.target.dataset.es == 0}}">
      <view class="main">
        <image src="../../images/get-more-score.png"  class="get-more_score" mode="" bindtap="navagitorToActivity"/>
        <view class="item item-wrap" wx:for="{{ shopList }}" wx:for-item="shopItem" wx:key="shopItem.id" bindtap="navToDetail">
          <view class="shop-item-picture">
            <image src="{{ shopItem.shopItemImage }}" class="shop-size" mode="" />
            <view></view>
          </view>
          <view class="shop-item-title">
            {{ shopItem.shopItemTitle }}
          </view>
          <view>
            <text class="points-redemption">{{ shopItem.shopItemPrice }}</text>
            <text class="points-text">积分</text>
          </view>
          <view class="monthly-exchange">
            月兑 {{ shopItem.yuedui }}
          </view>
        </view>
      </view>
    </view>
    <view wx:if="{{isHr.target.dataset.es == 1}}">推荐商品</view>
    <view wx:if="{{isHr.target.dataset.es == 2}}">美食</view>
    <view wx:if="{{isHr.target.dataset.es == 3}}">日用</view>
  </view>
</view>