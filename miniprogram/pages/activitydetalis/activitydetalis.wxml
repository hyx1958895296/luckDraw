<!--pages/activitydetalis/activitydetalis.wxml-->
<loding wx:if="{{isLoding}}"></loding>
<view wx:else class="activity-details">

  <view class="activity-rules">
    <view>
      活动规则
    </view>
  </view>

  <view class="header">
    <image src="{{activityInfo.activityCover}}" mode="" />
  </view>

  <view class="listOfPrizes-box">
    <view class="listofprizes-titile">
      奖品列表
    </view>

    <view class="listofprizes-main">

      <view class="listOfPrizes-item" wx:for="{{activityInfo.prizelist}}" wx:key="index                            ">
        <view>
          <image src="{{item.img}}" mode="" />
        </view>
        <view class="shopinfo-box">
          <view><text class="people-number_box">满{{item.peopleCount}}人</text> {{item.prizeName}}</view>
          <view class="shop-number">数量：{{item.prizeCount}}份</view>
        </view>
      </view>

    </view>
  </view>


  <view class="countdown-box">
    <view class="countdown-titile">
      开奖倒计时
    </view>
    <view class="countdown-countent">
      <text class="countdown-countent-active">04</text> 天 <text class="countdown-countent-active">19</text> 时 <text class="countdown-countent-active">7</text> 分 <text class="countdown-countent-active">14</text> 秒
    </view>

    <view class="progress-box">
      <text class="progress-people">距离500人的奖池进度：</text>
      <progress backgroundColor="black" show-info duration="10" activeColor="rgb(223, 76, 19)" percent="{{people/500*100}}" active stroke-width="10" />
    </view>

    <view class="ft-28">
      已经有<text>{{people}}</text>人参加了活动
    </view>

    <view class="invitation-btn">
      <view>邀请好友参加抽奖活动</view>
      <view class="ft-22">（邀请好友越多中奖概率越高）</view>
    </view>
  </view>

  <view class="raffle-box" bindtap="luckDraw">
    点击参与抽奖
  </view>

  <view class="raffle-button_box">
    <view class="{{isLuckDraw == false ? 'raffle-button_none' : 'raffle-button'}}" bindtap="luckDraw">
      参与抽奖
    </view>
  </view>

  <view class="foot ptm-80 fc-173170">
    <text>—— 活动抽奖 —— </text>
    <view class="ft-18 mt-10">
      超过2亿人使用的免费抽奖平台
    </view>
  </view>
</view>